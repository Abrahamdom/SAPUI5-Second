<mvc:View controllerName="abrahamgroup.Employees.controller.App" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          displayBlock="true">
	
    <Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <!--Creamos un control HBox, éste creará un contenedor horizontal-->
                        <HBox>
                            <!--Usamos un control label junto con un control input, se enlazan con la propiedad "labelFor"-->
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin"/>
                            <!--Con value definimos el valor del control-->
                            <Input id="inputEmployee" value="{/EmployeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin"/>
                            <!--Con selectedKey definimos la llave del objeto seleccionado y con items agregamos el arreglo de los n numero de datos-->
                            <Select id="slCountry" forceSelection="false" selectedKey="{/CountryKey}" items="{/ListCountry}" class="sapUiTinyMarginEnd">
                                <items>
                                    <!--Usamos key y text para mostrar los datos del modelo oJSONModel que está en el controlador-->
                                    <core:Item key="{Key}" text="{Text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiTinyMarginEnd"/>
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
                        </HBox>
                        <HBox>
                            <Panel>
                                <!--Creamos una tabla la cual contendrá items, desde el fichero Employees.json (items="{/Employees}"-->
                                <Table id="tableEmployee" items="{/Employees}">
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableId}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableName}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCountry}"/>
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCity}"/>
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <!--La propiedad type define la indicación visual y el comportamiento de los elementos de la vista-->
                                        <ColumnListItem type="Active" press="showPostalCode">
                                            <cells>
                                                <!--Aquí es donde establecemos los datos para que se visualicen en la interfaz de usuario-->
                                                <Label text="{EmployeeID}"/>
                                                <Label text="{LastName}, {FirstName}"/>
                                                <Label text="{Country}"/>
                                                <Label text="{City}"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>
