<mvc:View controllerName="abrahamgroup.Employees.controller.App" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          displayBlock="true">
	
    <Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <!--Creamos un control HBox, éste creará un contenedor horizontal-->
                        <HBox>
                            <!--Usamos un control label junto con un control input, se enlazan con la propiedad "labelFor"-->
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin"/>
                            <!--El evento liveChange se dispara cuando el valor de entrada es cambiado por el usuario-->
                            <Input id="inputEmployee" maxLength="8" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" visible="false" class="sapUiSmallMargin"/>
                            <Select id="slCountry" forceSelection="false" visible="false">
                                <items>
                                    <core:Item key="US" text="{i18n>countryUS}"/>
                                    <core:Item key="UK" text="{i18n>countryUK}"/>
                                    <core:Item key="ES" text="{i18n>countryES}"/>
                                </items>
                            </Select>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>
