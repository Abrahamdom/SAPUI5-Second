<mvc:View controllerName="abrahamgroup.Employees.controller.App" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:core="sap.ui.core" 
          displayBlock="true">
	
    <Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <!--Creamos un control HBox, éste creará un contenedor horizontal-->
                        <HBox>
                            <!--Usamos un control label junto con un control input, se enlazan con la propiedad "labelFor"-->
                            <Label id="labelEmployee" text="{i18n>labelEmployee}" labelFor="inputEmployee" class="sapUiSmallMargin"/>
                            <!--El evento liveChange se dispara cuando el valor de entrada es cambiado por el usuario-->
                            <!--Con value definimos el valor del control-->
                            <Input id="inputEmployee" value="{/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" visible="false" class="sapUiSmallMargin"/>
                            <!--Con selectedKey definimos la llave del objeto seleccionado y con items agregamos el arreglo de los n numero de datos-->
                            <Select id="slCountry" forceSelection="false" selectedKey="{/countryKey}" items="{/listCountry}" visible="false">
                                <items>
                                    <!--Usamos key y text para mostrar los datos del modelo oJSONModel que está en el controlador-->
                                    <core:Item key="{key}" text="{text}"/>
                                </items>
                            </Select>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>
